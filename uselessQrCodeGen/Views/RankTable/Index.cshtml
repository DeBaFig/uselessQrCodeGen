@{
    ViewData["Title"] = "Rank de Perda de Tempo";
}
@model List<uselessQrCodeGen.Models.RankViewModel>
<div class="container">
    <h1>Rank de perda de Tempo</h1>
    @if (Model.Count == 0)
    {
        <h2>Nenhum desocupado ainda</h2>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Tempo disperdiçado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@(TimeSpan.FromSeconds(item.LostTime).ToString("hh\\:mm\\:ss"))</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>